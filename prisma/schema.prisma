generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id @default(auto()) @map("_id") @db.ObjectId
  email          String    @unique
  emailVerified  DateTime? // Adicionado para compatibilidade total com NextAuth
  password       String?
  name           String?
  image          String?   

  systemPrompt   String?
  chatPrompt     String?   
  
  catalogs       Catalog[]
  chatMessages   ChatMessage[]
  
  // Relacionamentos para o NextAuth (Onde os tokens realmente moram)
  accounts       Account[]
  sessions       Session[]
  
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt // Adicionei para seu controle
}

model Account {
  id                String  @id @default(auto()) @map("_id") @db.ObjectId
  userId            String  @db.ObjectId
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.String
  access_token      String? @db.String
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.String
  session_state     String?

  refresh_token_expires_in Int?
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  sessionToken String   @unique
  userId       String   @db.ObjectId
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Catalog {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  fileName          String   
  originalName      String?  
  summary           String   
  category          String   
  subcategory       String?
  subject           String?
  author            String?
  duration          String?
  isWatchEveryDay   Boolean  @default(false)
  priority          Int?
  observations      String?  
  
  // Campo para o RAG (Vetorização dos resumos)
  embedding         Float[]  
  
  videoUrl     String?   // A URL para assistir o vídeo futuramente
  sourceType   String?   // 'FILE' (upload manual) ou 'URL' (link externo)
  mimeType        String?  // Ex: 'video/mp4' (importante para o player)
  thumbnailUrl    String?  // Para mostrar a capa do vídeo na biblioteca

  userId            String   @db.ObjectId
  user              User     @relation(fields: [userId], references: [id])
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model ChatMessage {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  role      String   // 'user' ou 'assistant'
  content   String
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}